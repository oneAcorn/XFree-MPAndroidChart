<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XFreeChart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.XFreeChart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XFreeChart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.XFreeChart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--右上角更多图标的颜色-->
        <item name="colorControlNormal">@color/black</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
    </style>

    <!--可以在此修改Toolbar的NavigationIcon样式-->
    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <!--<item name="android:minWidth">30dp</item>-->
        <!--<item name="android:padding">0dp</item>-->
        <!--<item name="android:scaleType">centerInside</item>-->
    </style>

    <style name="Theme.BasicApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>